<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="mongoProp" class="com.pentalog.twitter.model.mongoObjects.MongoProperties">
        <property name="host" value="10.185.40.98"/>
        <property name="port" value="27017"/>
    </bean>

    <bean id="mongoConnectionBean" class="com.mongodb.MongoClient">
        <constructor-arg index="0" value="10.185.40.98" type="java.lang.String"/>
        <constructor-arg index="1" value="27017" type="int"/>
    </bean>
</beans>